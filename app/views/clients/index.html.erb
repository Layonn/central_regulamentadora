<p id="notice"><%= notice %></p>

<div class="col-md-offset-1">
  <%= link_to new_client_path, type: 'button', class: 'btn btn-primary pull-right' do %>
     <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
  <% end %>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cnpj</th>
      <th>Sponsor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.cnpj %></td>
        <td><%= client.sponsor %></td>
        <td>
          <div class="btn-group btn-group-sm pull-right" role="group" aria-label="...">
            <%= link_to client, type: 'button', class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span> Show
            <% end %>

            <%= link_to edit_client_path(client), type: 'button', class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            <% end %>

            <%= link_to client, method: :delete, type: 'button', data: {confirm: 'Certeza?'}, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Destroy
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
