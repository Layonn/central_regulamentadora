<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="container">
    <h1><%= @client.name %>
      <div class="pull-right">
        <small><%= @client.sponsor %></small>
      </div>
    </h1>

    <dl class="dl-horizontal">
      <dt>CNPJ</dt>
      <dd><%= @client.cnpj %></dd>

      <dt>Phone</dt>
      <dd><%= @client.phone %></dd>

      <dt>Cell phone</dt>
      <dd><%= @client.cell_phone %></dd>

      <dt>E-mail</dt>
      <dd><%= @client.email %></dd>

      <dt>Street</dt>
      <dd><%= @client.street %></dd>

      <dt>Address Number</dt>
      <dd><%= @client.address_number %></dd>

      <dt>City</dt>
      <dd><%= @client.city %></dd>

      <dt>State</dt>
      <dd><%= @client.state %></dd>
    </dl>
  </div>
</div>

<div class="btn-group btn-group-sm pull-right" role="group" aria-label="...">

  <%= link_to edit_client_path(@client), type: 'button', class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
  <% end %>

  <%= link_to @client, method: :delete, type: 'button', data: {confirm: 'Certeza?'}, class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Destroy
  <% end %>
</div>
